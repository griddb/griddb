<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>3D Gun</title>
    <style>
        body { margin: 0; }
        canvas { display: block; }
    </style>
</head>
<body>
    <script src="https://threejs.org/build/three.js"></script>
    <script>
        // Set up scene
        var scene = new THREE.Scene();

        // Set up camera
        var camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
        camera.position.z = 5;

        // Set up renderer
        var renderer = new THREE.WebGLRenderer();
        renderer.setSize(window.innerWidth, window.innerHeight);
        document.body.appendChild(renderer.domElement);

        // Load gun model
        var loader = new THREE.GLTFLoader();
        loader.load('path/to/your/gun_model.gltf', function (gun) {
            // Adjust the position, rotation, and scale of the gun model as needed
            gun.scene.position.set(0, 0, 0);
            gun.scene.rotation.set(0, Math.PI, 0);
            gun.scene.scale.set(0.1, 0.1, 0.1);

            // Add the gun to the scene
            scene.add(gun.scene);
        });

        // Set up animation
        var animate = function () {
            requestAnimationFrame(animate);

            // Add any animation logic here

            renderer.render(scene, camera);
        };

        // Start animation
        animate();
    </script>
</body>
</html>
